---
const { href, text, icon, gradBegin, gradEnd } = Astro.props;
---

<div class="cell-button-container">
    <a href={href} class="cell-button" style={`background: linear-gradient(90deg, ${gradBegin} 0%, ${gradEnd} 100%);`}>
        <img src={icon} alt={text} height="32px" />
        <span>{text}</span>
    </a>
</div>

<style>
    .cell-button-container {
        padding: 1rem 0;
        display: inline-block;
    }

    .cell-button {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0.5rem 1.5rem;
        border-radius: 4rem;
        border: 2px solid rgba(255, 255, 255, 0.4);
        color: white;
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.2s;
        font-weight: 300;
    }

    .cell-button:hover {
        transform: scale(1.05);
    }

    .cell-button img {
        padding: 0 0.5rem 0 0;
    }
</style>